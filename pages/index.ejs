<!-- slider -->    
            </div>
        
                
<div class="content">
    
  <div class="title-block"><h2 class="h2-title">Каталог</h2></div>
  <form action="">
  <div class="option-block">
    <div class="row-options">
      
      <ul>
        <li><input type="checkbox" class="checkbox" name="material" id="wood-material" value="wood"><label for="wood-material">Дерево</label></li>
        <li><input type="checkbox" class="checkbox" name="material" id="stone-material" value="stone"><label for="stone-material">Камень</label></li>
        <li><input type="checkbox" class="checkbox" name="material" id="monocolor-material" value="monocolor"><label for="monocolor-material">Моноколор</label></li>
        <li><input type="checkbox" class="checkbox" name="material" id="beton-material" value="beton"><label for="beton-material">Бетон</label></li>
        <li><input type="checkbox" class="checkbox" name="material" id="tracery-material" value="tracery"><label for="tracery-material">Узор</label></li>
      </ul>
        <button id="test">Получить чекеты</button>
    </div>
  </div>
</form>
  <div class="catalog-block">


    <% data.product.forEach(function(products) { %>
      
    <div class="tovar">
      <div class="tovar-img"> 
        <div class="flex">
             
          <span>
            
               <a href="<%= products.translit_links %>">  <h2 class="tovar-brands"><%= products.title_brands %></h2>  </a>  
       
      </div>
          </span>
        <img src="../public/images/<%= products.link_img %>" alt="Изображение товара">
      </div>
      <div class="tovar-option"><p>Коллекция: <%= products.title_product %> </p><p>Текстура: <%= products.texture %></p></div>
    </div>
   
    <% }); %>

      
      <% if(red) { %>
      <%-include ./moretovar %>
        <% } %>

    
  </div>
  <% if (display_more_product) { %>
    <div class="show-tovar"> <div class="button-white" id = "showmore">ПОКАЗАТЬ ЕЩЕ</div> </div>
    <% } %>
  

  <div class="popular-position">
      <div class="title-block"><h2 class="h2-title" >Популярные позиции</h2></div>
    <div class="catalog-block2">
      <div class="content-popular-carousel">
        <div class="owl-nav">
            <div class="owl-prev-popular" id="owl-prevp-popular"></div>
            <div class="owl-next-popular"  id="owl-next-popular"></div>
        </div>
      <div class="owl-carousel popular-carousel" id="owl-carousel-popular">
        <div> <div class="tovar"></div>  </div>
        <div> <div class="tovar"></div> </div>
        <div> <div class="tovar"></div> </div>
        <div> <div class="tovar"></div> </div>
        
      </div>
  </div>
</div>

</div>
    <div class="brands-s">
    <div class="title-block"><h2 class="h2-title" style="color: white; top: 70px; position: relative;">Бренды</h2> </div>
    <div class="brands-catalog">
        <div class="owl-nav">
            <div class="owl-prev"><div class="prev"></div></div>
            <div class="owl-next"><div class="next"></div></div>
        </div>
      <div class="owl-carousel owl-carousel-brands" id="owl-carousel">
        <% data.brands.forEach(function(brand) { %> 
        <div> <img src="../public/images/fabrica/<%= brand.img_link_brands %>"> </div>
        <% }); %>
      </div>

</div>
      
 </div>  
  <!-- Карта - форма обратной связи -->
   <%-include ./footer %>
  
</div>
</div>



